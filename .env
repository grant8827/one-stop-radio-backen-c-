# C++ Media Server Environment Configuration
# COMPLETE AUDIO & VIDEO STREAMING ENGINE
# Handles WebRTC ingestion, real-time mixing, encoding, and RTMP distribution

# Server Configuration
HTTP_PORT=8080
WEBRTC_PORT=8081
RTMP_PORT=1935

# Audio Stream Configuration
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=2
AUDIO_BITRATE=320000  # 320 kbps high quality
AUDIO_BUFFER_SIZE=1024

# Video Stream Configuration  
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30
VIDEO_BITRATE=2000000  # 2 Mbps

# DJ Mixer Configuration
MIXER_CHANNELS=2
CROSSFADER_CURVE=linear
EQ_BANDS=3  # Low, Mid, High
EFFECTS_ENABLED=true

# Output Configuration
HLS_SEGMENT_DURATION=6
DASH_SEGMENT_DURATION=4
RTMP_RECONNECT_ATTEMPTS=3

# Social Media RTMP Endpoints
YOUTUBE_RTMP_SERVER=rtmp://a.rtmp.youtube.com/live2/
TWITCH_RTMP_SERVER=rtmp://live.twitch.tv/app/
FACEBOOK_RTMP_SERVER=rtmps://live-api-s.facebook.com:443/rtmp/

# Audio Processing
ENABLE_AUDIO_PROCESSING=true
NOISE_SUPPRESSION=true
ECHO_CANCELLATION=false
AUTO_GAIN_CONTROL=false

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/media_server.log

# Service Identity  
SERVICE_NAME=OneStopRadio-Media-Server
SERVICE_VERSION=1.0.0